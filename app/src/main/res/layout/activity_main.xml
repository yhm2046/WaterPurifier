<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jt04">

    <TextView
        android:id="@+id/tvState04"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/jt05"
        android:gravity="center_horizontal|center_vertical"
        android:text="-4°C"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvState03" />

    <TextView
        android:id="@+id/tvState01"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/jt08"
        android:gravity="center_horizontal|center_vertical"
        android:text="优"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="@+id/tvState02"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvState03"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/jt06"
        android:gravity="center_horizontal|center_vertical"
        android:text="-9°C"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="@+id/tvState04"
        app:layout_constraintTop_toBottomOf="@+id/tvState02" />

    <TextView
        android:id="@+id/tvState02"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/jt07"
        android:gravity="center_horizontal|center_vertical"
        android:text="5°C"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="@+id/tvState03"
        app:layout_constraintTop_toBottomOf="@+id/tvState01" />

    <TextView
        android:id="@+id/tvTempuratuer"
        android:layout_width="379dp"
        android:layout_height="239dp"
        android:layout_marginTop="136dp"
        android:text="26°C"
        android:textColor="@color/white"
        android:textSize="150dp"
        app:layout_constraintStart_toStartOf="@+id/tvGPS"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGPS"
        android:layout_width="167dp"
        android:layout_height="64dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="20dp"
        android:text="深圳南山"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:layout_marginEnd="32dp"
        android:text="2021年12月31日"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGPS" />

    <TextView
        android:id="@+id/tvValue01"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/jt08"
        android:gravity="center_horizontal"
        android:text="冰箱状态"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvState01" />

    <TextView
        android:id="@+id/tvValue02"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/jt07"
        android:gravity="center_horizontal"
        android:text="冷藏室"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvState02" />

    <TextView
        android:id="@+id/tvValue03"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/jt06"
        android:gravity="center_horizontal"
        android:text="冷冻室"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvState03" />

    <TextView
        android:id="@+id/tvValue04"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/jt05"
        android:gravity="center_horizontal"
        android:text="变温区"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvState04"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="422dp"
        android:layout_height="114dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="324dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
